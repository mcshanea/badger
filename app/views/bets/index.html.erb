<h1>Listing bets</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>User</th>
    <th>Game</th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%=h bet.amount %></td>
    <td><%=h bet.user_id %></td>
    <td><%=h bet.game %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bet', new_bet_path %>